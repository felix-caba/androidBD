            android:textSize="20sp" android:textAlignment="center"
            android:id="@+id/textVYM"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="Menu de creaciÃ³n"
            android:layout_width="213dp"
            android:layout_height="23dp" android:id="@+id/textView"
            android:textSize="16sp" android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="98dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="776dp"
            app:layout_constraintTop_toBottomOf="@+id/textVYM" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPersona"
            android:minHeight="48dp" android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextDomicilio"
            app:layout_constraintHorizontal_bias="0.0" android:hint="Persona" android:autofillHints=""
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:hint="Email" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMovil" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/editTextDate"
            android:minHeight="48dp" android:autofillHints="" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextDate"
            android:hint="Fecha de Nacimiento" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp"
            android:layout_marginEnd="101dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/spinner_crear"
            android:minHeight="48dp" android:autofillHints="" app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="209dp"
            android:layout_height="48dp" android:id="@+id/spinner_crear"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp"
            android:layout_marginEnd="192dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="357dp" android:spinnerMode="dropdown" android:entries="@array/array_generos"/>
    <Button
            android:text="Crear la persona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_crear_persona"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="207dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" android:layout_marginEnd="159dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_crear"/>
</androidx.constraintlayout.widget.ConstraintLayout>

