<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="vYm 0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:textAlignment="center"
            android:id="@+id/textVYM"
            app:layout_constraintBottom_toTopOf="@+id/button_crear"
    />
    <Button
            android:text="Crear Persona"
            android:layout_width="182dp"
            android:layout_height="52dp" android:id="@+id/button_crear"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toTopOf="@+id/button_modificar"
            android:layout_marginBottom="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textVYM"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Surface"/>
    <Button
            android:text="Modificar Persona"
            android:layout_width="184dp"
            android:layout_height="54dp" android:id="@+id/button_modificar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="114dp"
            android:layout_marginEnd="113dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="614dp"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/button_crear"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Surface"/>

</androidx.constraintlayout.widget.ConstraintLayout>